<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>AccueilServlet</servlet-name>
        <servlet-class>ch.hesge.prog.servlet.AccueilServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListeProduitsServelet</servlet-name>
        <servlet-class>ch.hesge.prog.servlet.ListProductsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckoutServlet</servlet-name>
        <servlet-class>ch.hesge.prog.servlet.CheckoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductServlet</servlet-name>
        <servlet-class>ch.hesge.prog.servlet.ProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PaymentServlet</servlet-name>
        <servlet-class>ch.hesge.prog.servlet.PaymentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartServlet</servlet-name>
        <servlet-class>ch.hesge.prog.servlet.CartServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CartServlet</servlet-name>
        <url-pattern>/caddie/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductServlet</servlet-name>
        <url-pattern>/produit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckoutServlet</servlet-name>
        <url-pattern>/checkout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccueilServlet</servlet-name>
        <url-pattern>/Accueil</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListeProduitsServelet</servlet-name>
        <url-pattern>/produits</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PaymentServlet</servlet-name>
        <url-pattern>/paiement</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>ch.hesge.prog.initialization.DataInitializer</listener-class>
    </listener>
    
    <filter>
        <filter-name>AddProduct</filter-name>
        <filter-class>ch.hesge.prog.filter.AddProductFilter</filter-class>
    </filter>
    <filter>
        <filter-name>DecrementProduct</filter-name>
        <filter-class>ch.hesge.prog.filter.DecrementProductFilter</filter-class>
    </filter>
    <filter>
        <filter-name>DeleteProduct</filter-name>
        <filter-class>ch.hesge.prog.filter.DeleteProductRowFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AddProduct</filter-name>
        <url-pattern>/caddie/add</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>DecrementProduct</filter-name>
        <url-pattern>/caddie/decrement</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>DeleteProduct</filter-name>
        <url-pattern>/caddie/delete</url-pattern>
    </filter-mapping>

    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/Error500.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/Error404.jsp</location>
    </error-page>

</web-app>